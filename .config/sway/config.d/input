### Input configuration
#
# Example configuration:
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Put your touchpad's ID to replace "Touchpad-ID" (keep the quotation marks)

input type:touchpad {
    click_method clickfinger
    dwt enabled
    tap disabled
    natural_scroll enabled
    # accel_profile "flat"
    pointer_accel 0.3
}

input "2:10:TPPS/2_ALPS_TrackPoint" {
    accel_profile "flat"
    pointer_accel 0.2
}

# Disable Wacom Pen
# Probably should turn this into a shortcut action but its pissing me off right now
# input "1386:20920:Wacom_Pen_and_multitouch_sensor_Pen" {
    # events enabled
# }
bindsym XF86Favorites input "1386:20920:Wacom_Pen_and_multitouch_sensor_Pen" events toggle enabled disabled, \
        exec notify-send Wacom_Pen "$(swaymsg -t get_inputs | jq -r '.[] | select(.identifier == \"1386:20920:Wacom_Pen_and_multitouch_sensor_Pen\").libinput.send_events')"

# Read `man 5 sway-input` for more information about this section.
#
input type:keyboard {
    xkb_layout "us"
    # Option below was replaced with keyd
    # xkb_options caps:swapescape
} 

exec_always {
    'swaymsg input type:keyboard xkb_layout "$(localectl status | grep "X11 Layout" | sed -e "s/^.*X11 Layout://")"'
    'swaymsg input type:keyboard xkb_variant "$(localectl status | grep "X11 Variant" | sed -e "s/^.*X11 Variant://")"'
}
